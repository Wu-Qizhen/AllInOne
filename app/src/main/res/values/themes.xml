<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AllInOne" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/misans_regular</item>
        <item name="android:colorControlActivated">@color/theme_yellow</item> <!-- 设置激活状态下的光标颜色 -->
    </style>

    <!-- 禁用右滑退出 -->
    <style name="Theme.AllInOne.DisableExit" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowSwipeToDismiss" tools:ignore="WearBackNavigation">false</item>
    </style>
</resources>